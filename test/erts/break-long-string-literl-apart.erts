Name: If string literal beginning passes fill-column, text will be broken as soon as posible.
=-=
class SomeClass
{
    function someMethod ()
    {
        while (true)
        {
            if (true)
            {
                $array = [
                    [
                        [
                            [
                                'exa|mple_key_long' => 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce vel luctus tellus, non varius ante.'
                            ]
                        ]
                    ]
                ];
                break;
            }
        }
    }
}
